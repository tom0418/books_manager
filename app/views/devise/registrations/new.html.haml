%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  .field
    = f.label :first_name
    %br/
    = f.text_field :first_name, autofocus: true, autocomplete: "first_name"
  .field
    = f.label :last_name
    %br/
    = f.text_field :last_name, autofocus: true, autocomplete: "last_name"
  .field
    = f.label :admin
    %br/
    = f.check_box :admin, {}, true, false
  .field
    = f.label :department_id
    %br/
    = f.select :department_id, User.department_ids.keys, autofocus: true
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"
